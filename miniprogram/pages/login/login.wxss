.loginAvatar{
  display: flex;
  align-items: center;
  justify-content: center;  
  margin: 0 auto;
  margin-top: 150rpx;
  border-radius: 1000rpx;
  border:1px solid #ccc;
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}
.loginNickName{
  color: #888;
  width: 100%;
  text-align: center;
  margin-top: 50rpx;
}
.loginBtn{
  border-radius: 20rpx;
  border:1px solid #ddd;
  width: 500rpx; 
  margin-top: 50rpx;
  color: #333;
  background-color: #f0f0f0;
}